<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>User_id</th>
      <th>Title</th>
      <th>Position</th>
      <th>Location</th>
      <th>Experience</th>
      <th>Salary</th>
      <th>Openings</th>
      <th>Employment Type</th>
      <th>Education</th>
      <th>Skills</th>
      <th>Job Description</th>
      <th>Archived</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user_id %></td>
        <td><%= job.title %></td>
        <td><%= job.position %></td>
        <td><%= job.location %></td>
        <td><%= job.experience %></td>
        <td><%= job.salary %></td>
        <td><%= job.openings %></td>
        <td><%= job.employment_type %></td>
        <td><%= job.education %></td>
        <td><%= job.skills %></td>
        <td><%= job.job_description %></td>
        <td><%= job.archived %></td>
        <% if current_user && current_user.id == job.user_id %>
          <td><%= link_to 'Show', job %></td>
          <td><%= link_to 'Edit', edit_job_path(job) %></td>
          <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% if user_signed_in? %>
  <%= link_to 'Post New Job', new_job_path %> |
  <%= link_to 'Profile', profile_path %>
<% end %>




